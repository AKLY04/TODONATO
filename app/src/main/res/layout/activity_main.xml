<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/img_first"
        android:layout_width="191dp"
        android:layout_height="161dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shape" />

    <Button
        android:id="@+id/btn_getStarted"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button_design"
        android:bottomLeftRadius="100dp"
        android:bottomRightRadius="10dp"
        android:text="Get Started"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondTxt" />

    <TextView
        android:id="@+id/firstTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Get things done with TODOnato"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_second" />

    <TextView
        android:id="@+id/secondTxt"
        android:layout_width="245dp"
        android:layout_height="101dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins"
        android:gravity="center|top"
        android:text="It is a task management application that helps you organize and manage your day to day tasks. Helps you keep focused, productive, and motivated throughout the day."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstTxt" />

    <ImageView
        android:id="@+id/img_second"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        app:layout_constraintTop_toBottomOf="@+id/img_first"
        app:srcCompat="@drawable/getstartedmiddle"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>

